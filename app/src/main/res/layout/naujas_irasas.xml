<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.moksleivis.pokeris.naujas_irasasActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
         <EditText
             android:id="@+id/naujas_Vardas"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="@string/vardas"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patvirtinkite, kad jums yra 18m:" />

            <RadioGroup
                android:id="@+id/patvirtinimaiRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/patvirtinimasTaip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Taip" />

                <RadioButton
                    android:id="@+id/patvirtinimasNe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ne" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Å½aidimo tipas:" />

            <Spinner
                android:id="@+id/tipaiSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/gerimasViskis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viskis"
                android:checked="true"/>
            <CheckBox
                android:id="@+id/gerimasAlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alus"/>
            <CheckBox
                android:id="@+id/gerimasCocaCola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CocaCola"/>
            <CheckBox
                android:id="@+id/gerimasSultys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sultys"/>
            <Button
                android:layout_marginTop="60dp"
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saugoti" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>